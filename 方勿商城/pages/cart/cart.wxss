.Cart {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding-bottom: 50px;
}
.Cart .order {
    width: 94%;
}
.Cart .order .orderinfo {
    width: 100%;
    height: 40px;
    background-color: #ffffff;
    margin-top: 10px;
    border-radius: 10px 10px 0 0 ;
    padding: 0 10px;
    box-sizing: border-box;
    display: flex;
}
.Cart .order .orderinfo .order_num {
    height: 40px;
    line-height: 40px;
}
.Cart .order .orderinfo .order_num text {
    font-size: 12px;
    color: #333333;
}
.Cart .order .orderinfo .time {
    height: 40px;
    line-height: 40px;
    margin-left: auto;
}
.Cart .order .orderinfo .time text {
    font-size: 10px;
    color: #666666;
}
.Cart .order .order_content {
    width: 100%;
}
.Cart .order .order_content .item{
    width: 100%;
    display: flex;
    padding: 10px;
    box-sizing: border-box;
    margin-top: 5px;
    background-color: #ffffff;
}
.Cart .order .order_content .item  .photo { 
    width: 80px;
    height: 80px;
    padding-right: 10px;
}
.Cart .order .order_content .item  .photo image { 
    width: 80px;
    height: 80px;
    border-radius: 4px;
}
.Cart .order .order_content .item  .item_content {
    position: relative;
    flex: 1;
 }
.Cart .order .order_content .item  .item_content .name {
    font-size: 14px;
    color: #333333;
    font-weight: bold;
    height: 30px;
    line-height: 30px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
 }
.Cart .order .order_content .item  .item_content .address { 
    font-size: 12px;
    color: #666666;
    height: 14px;
    line-height: 14px;
}
.Cart .order .order_content .item  .item_content .price {
    font-size: 14px;
    font-weight: bold;
    color: #ff5700;
    height: 30px;
    line-height: 50px;
 }
.Cart .order .order_content .item  .item_content .btns {
    display: flex;
    position: absolute;
    right: 0;
    bottom: 0;
 }
.Cart .order .order_content .item  .item_content .btns .down ,.Cart .order .order_content .item  .item_content .btns .add { 
    width: 20px;
    height: 20px;
    text-align: center;
    border:1px solid #f2f2f2;
    color: #333333;
    font-size: 12px;

}
.Cart .order .order_content .item  .item_content .btns .num { 
    width: 30px;
    height: 20px;
    text-align: center;
    font-size: 12px;
    color: #333333;
    line-height: 20px;
    border: solid #f2f2f2;
    border-width: 1px 0;
}
.Cart .order .order_content .item  .item_content .btns .del {
    margin-left: 10px;
    height: 22px;
    display: flex;
    align-items: center;
}
.Cart .order .order_content .item  .item_content .btns .del image {
    width: 18px;
    height: 16px;
}
.Cart .allprice {
    width: 100%;
    height: 50px;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #ffffff;
    display: flex;
    align-items: center;
}
.Cart .allprice .num {
    margin-left: 10px;
}
.Cart .allprice .num .words {
    font-size: 12px;
    color: #333333;
}
.Cart .allprice .num .pricenum {
    font-size: 14px;
    color: #ff6700;
    font-weight: bold;
}
.Cart .allprice .btn {
    width: 100px;
    height: 30px;
   text-align: center;
   line-height: 30px;
   font-size: 12px;
   color: #ffffff;
   background-color: #ff6700;
   border-radius: 2px;
   margin-left: auto;
   margin-right: 10px;
}