.Pay {}
/* 个人地址信息 */
.Pay .order_contacts {
    width: 100%;
    background-color: #ffffff;
}
.Pay .order_contacts .contacts {
    padding: 10px;
    font-size: 14px;
    color: #333333;
}
.Pay .order_contacts .contacts .name {
    margin-right: 10px;
}
.Pay .order_contacts .contacts .phonenum {}
.Pay .order_contacts .address {
    padding:  0 10px 10px;
}
.Pay .order_contacts .address text {
    font-size: 12px;
    color: #666666;
}
/* 个人地址信息end */
/* 订单信息 */
.Pay .orderinfo {
    width: 100%;
    margin-top: 10px;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}
.Pay .orderinfo .goodslisttitle ,
.Pay .orderinfo .order {
    width: 94%;
    height: 30px;
    background-color: #ffffff;
    line-height: 30px;
    font-size: 12px;
    color: #333333;
    display: flex;
}
.Pay .orderinfo .goodslisttitle .goodsname ,
.Pay .orderinfo .order .goodsname {
    width: 60%;
    text-indent: 10px;
}
.Pay .orderinfo .goodslisttitle .goodsnum ,
.Pay .orderinfo .order .goodsnum {
    width: 15%;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.Pay .orderinfo .goodslisttitle .goodsprice ,
.Pay .orderinfo .order .goodsprice {
    width: 25%;
    text-align: center;
}
.Pay .orderinfo .order {
    width: 94%;
    background-color: #ffffff;
    margin-top: 10px;
}
/* 订单信息end */
/* 总价格 */
.Pay .allprice {
    width: 100%;
    height: 50px;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #ffffff;
    display: flex;
    align-items: center;
}
.Pay .allprice .num {
    margin-left: 10px;
}
.Pay .allprice .num .words {
    font-size: 12px;
    color: #333333;
}
.Pay .allprice .num .pricenum {
    font-size: 14px;
    color: #ff6700;
    font-weight: bold;
}
.Pay .allprice .btn {
    width: 100px;
    height: 30px;
   text-align: center;
   line-height: 30px;
   font-size: 12px;
   color: #ffffff;
   background-color: #ff6700;
   border-radius: 2px;
   margin-left: auto;
   margin-right: 10px;
}
/* 总价格end */