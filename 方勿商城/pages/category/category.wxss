.Category {
    white-space: 100%;
    display: flex;
}
.Category .cateleft {
    width: 25%;
    background-color: #ffffff;
}
.Category .cateleft .cate_con {
    width: 100%;
    height: 400px;
}
.Category .cateleft .cate_con view {
    height: 40px;
    text-align: center;
    line-height: 40px;
    font-size: 12px;
    color: #3C3C3C;
}
.Category .cateleft .cate_con view.con {
    color: #ff6700;
    font-size: 14px;
} 
.Category .cateright {
    white-space: 75%;
    background-color: #ffffff;
}
.Category .cateright .cate_con {
    width: 100%;
}
.Category .cateright .cate_con .cate_item {
    width: 33.33%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding-top: 10px;
    height: 64px;
    float: left;
}
.Category .cateright .cate_con .cate_item image {
    width: 50px;
    height: 50px;
}
.Category .cateright .cate_con .cate_item text {
    display: block;
    font-size: 10px;
    width: 100%;
    text-align: center;
    color: #666666;
    height: 14px;
    line-height: 14px;
}