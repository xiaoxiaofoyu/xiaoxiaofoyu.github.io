.User {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding-top: 10px;
}
.User .user_top {
    width: 94%;
    background-color: #ffffff;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding-bottom: 10px;
    border-radius: 10px;
    position: relative;
}
.User .user_top .user_photo {
    padding-top: 10px;
}
.User .user_top .user_photo image {
    width: 70px;
    height: 70px;
    border-radius: 50%;
}
.User .user_top .user_name {
    width: 100%;
    text-align: center;
    padding-top: 5px;
}
button {
    text-align: center;
    font-size: 10px;
    background-color: #ff6700;
    color: #ffffff;
    padding: 4px;
    border-radius: 0 10px 0 10px;
    line-height: 10px;
    position: absolute;
    right: 0;
    top: 0;
}
.User .user_top .user_name text {
    font-size: 14px;
    color: #333333;
}
.User .user_content {
    width: 94%;
    padding-top: 10px;
}
.User .user_content view {
    width: 100%;
    height: 40px;
    background-color: #ffffff;
    margin-bottom: 5px;
    border-radius: 10px;
    line-height: 40px;
    padding: 0 20px;
    box-sizing: border-box;
}
.User .user_content view text {
    font-size: 12px;
    color: #333333;
}
.User .user_content view.out {
    text-align: center;
    margin-top: 10px;
}