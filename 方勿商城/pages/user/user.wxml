<view class="User">
	<view class="user_top">
		<view class="user_photo">
			<image src="{{userInfo.avatarUrl}}"></image>
		</view>
		<view class="user_name">
			<text>{{userInfo.nickName}}</text>
		</view>
		<button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权</button>
	</view>
	<view class="user_content">
		<view class="collection" bindtap="toCollection">
			<text>我的收藏</text>
		</view>
		<view class="order" bindtap="toOrder"> 
			<text>我的订单</text>
		</view>
		<view class="address">
			<text>我的地址</text>
		</view>
		<view class="contact">
			<text>联系客服</text>
		</view>
		<view class="about" bindtap="toAbout">
			<text>关于我们</text>
		</view>
		
		<view class="out">
			<text>退出登录</text>
		</view>
	</view>
</view>